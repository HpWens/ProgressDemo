    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.circleprogress.widget.CircleProgressArc
                android:id="@+id/cpa0"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <com.example.circleprogress.widget.CircleProgressArc
                android:id="@+id/cpa1"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <com.example.circleprogress.widget.CircleProgressArc
                android:id="@+id/cpa2"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <com.example.circleprogress.widget.CircleProgressArc
                android:id="@+id/cpa3"
                android:layout_width="200dp"
                android:layout_height="200dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>